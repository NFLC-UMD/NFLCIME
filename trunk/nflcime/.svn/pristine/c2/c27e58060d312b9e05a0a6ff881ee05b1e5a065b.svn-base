BODY {
	font-family: sans-serif;
	padding: 0px;
	margin: 0px;
	overflow: hidden;
	border: 0px;
	background-color: #EEEEEE;
}

#frame {
	border: 1px outset #CCCCCC;
	cursor: default;
}

#frame-top-left {
	height: 3px;
	width: 3px;
	font-size: 0px;
}

#frame-top {
	height: 3px;
	font-size: 0px;
}

#frame-top-right {
	height: 3px;
	width: 3px;
	font-size: 0px;
}

#frame-left {
	width: 3px;
	height: 100%;
	font-size: 0px;
}

#frame-right {
	width: 3px;
	height: 100%;
	font-size: 0px;
}

#frame-bottom-left {
	height: 3px;
	width: 3px;
	font-size: 0px;
}

#frame-bottom {
	height: 3px;
	font-size: 0px;
}

#frame-bottom-right {
	height: 3px;
	width: 3px;
	font-size: 0px;
}

#frame-drag-bar {
	width: 100%;
	margin: 0px;
}

.h-resize.v-resize #frame-top-left {
	cursor: nw-resize;
}

.h-resize #frame-top-left {
	cursor: w-resize;
}

.v-resize #frame-top-left {
	cursor: n-resize;
}

.v-resize #frame-top {
	cursor: n-resize;
}

.h-resize.v-resize #frame-top-right {
	cursor: ne-resize;
}

.h-resize #frame-top-right {
	cursor: e-resize;
}

.v-resize #frame-top-right {
	cursor: n-resize;
}

.h-resize #frame-left {
	cursor: w-resize;
}

.h-resize #frame-right {
	cursor: e-resize;
}

.h-resize.v-resize #frame-bottom-left {
	cursor: sw-resize;
}

.h-resize #frame-bottom-left {
	cursor: w-resize;
}

.v-resize #frame-bottom-left {
	cursor: s-resize;
}

.v-resize #frame-bottom {
	cursor: s-resize;
}

.h-resize.v-resize #frame-bottom-right {
	cursor: se-resize;
}

.h-resize #frame-bottom-right {
	cursor: e-resize;
}

.v-resize #frame-bottom-right {
	cursor: s-resize;
}

.frameless #frame {
	border: 0px;
}

.frameless #frame-top-left {
	display: none;
}

.frameless #frame-top {
	display: none;
}

.frameless #frame-top-right {
	display: none;
}

.frameless #frame-left {
	display: none;
}

.frameless #frame-right {
	display: none;
}

.frameless #frame-bottom-left {
	display: none;
}

.frameless #frame-bottom {
	display: none;
}

.frameless #frame-bottom-right {
	display: none;
}

.frameless #frame-drag-bar {
	display: none;
}

#title-bar {
	width: 100%;
	border: 1px solid #BBBBBB;
	background-color: #FFEECC;
	margin-bottom: 2px;
	cursor: default;
	text-align: center;
	float: left;
}

#corner-button-left {
	text-align: left;
	float: left;
}
	
#title {
	border: 0px solid black;
	text-align: center;
	text-overflow: ellipsis;
	vertical-align: abs-center;
	overflow: hidden;
	padding-top: 1px;
}

#corner-button-right {
	text-align: right;
	float: right;
}

.corner-button {
	margin-top: 2px;
	margin-left: 2px;
	margin-right: 2px;
	margin-bottom: 0px;
}

.container-offset-parent {
	position: relative;
	width: 100%;
	height: 100%;
}

.container-offset-parent .container {
	position: absolute;
	border: 1px inset #CCCCCC; 
	padding: 4px 4px 4px 4px; 
	background-color: #FFC9C9;
	left: 0px;
	top: 0px;
	right: 0px;
	bottom: 50px;
	overflow: auto;
	
	/* IE only allows two of the four positioning parameters to be set; use CSS expression to set the width and height on that browser alone */
	width: expression( '100%' );
	height: expression( this.offsetParent.offsetHeight - 50 );
}

